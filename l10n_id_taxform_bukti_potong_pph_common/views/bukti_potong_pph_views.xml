<openerp>
<data>
<record id="bukti_potong_pph_view_tree" model="ir.ui.view">
    <field name="name">Bukti Potong PPh Tree</field>
    <field name="model">l10n_id.bukti_potong_pph</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="date"/>
            <field name="type_id" invisible="1"/>
            <field name="direction" invisible="1"/>
            <field name="company_id"/>
            <field name="journal_id"/>
            <field name="period_id"/>
            <field name="wajib_pajak_id"/>
            <field name="pemotong_pajak_id"/>
            <field name="ttd_id"/>
            <field name="total_tax"/>
            <field name="state"/>
        </tree>
    </field>
</record>

<record id="bukti_potong_pph_view_search" model="ir.ui.view">
    <field name="name">Bukti Potong PPh Search</field>
    <field name="model">l10n_id.bukti_potong_pph</field>
    <field name="arch" type="xml">
        <search>
            <field name="name"/>
            <field name="date"/>
            <field name="company_id"/>
            <field name="journal_id"/>
            <field name="period_id"/>
            <field name="wajib_pajak_id"/>
            <field name="pemotong_pajak_id"/>
            <field name="ttd_id"/>
            <field name="state"/>
            <group name="group_state" string="State">
                <filter name="filter_draft" string="Draft" domain="[('state','=','draft')]"/>
                <filter name="filter_confirm" string="Waiting for Approval" domain="[('state','=','confirm')]"/>
                <filter name="filter_done" string="Done" domain="[('state','=','done')]"/>
                <filter name="filter_cancel" string="Cancel" domain="[('state','=','cancel')]"/>
            </group>
            <group name="group_main" string="Group By..">
                <filter name="filter_grp_journal" string="Journal" context="{'group_by':'journal_id'}"/>
                <filter name="filter_grp_period" string="Period" context="{'group_by':'period_id'}"/>
                <filter name="filter_grp_wp" string="Wajib Pajak" context="{'group_by':'wajib_pajak_id'}"/>
                <filter name="filter_grp_pp" string="Pemotong Pajak" context="{'group_by':'pemotong_pajak_id'}"/>
                <filter name="filter_grp_ttd" string="TTD" context="{'group_by':'ttd_id'}"/>
                <filter name="filter_grp_state" string="State" context="{'group_by':'state'}"/>
                <separator/>
                <filter name="filter_grp_day" string="Day" context="{'group_by':'date:day'}"/>
                <filter name="filter_grp_week" string="Week" context="{'group_by':'date:week'}"/>
                <filter name="filter_grp_month" string="Month" context="{'group_by':'date:month'}"/>
                <filter name="filter_grp_year" string="Year" context="{'group_by':'date:year'}"/>
            </group>
        </search>
    </field>
</record>

<record id="bukti_potong_pph_view_form" model="ir.ui.view">
    <field name="name">Bukti Potong PPh Form</field>
    <field name="model">l10n_id.bukti_potong_pph</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <button name="workflow_action_confirm" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible':['|',('state','!=','draft'),('confirm_ok','=',False)]}" confirm="Confirm bukti potong?"/>
                <button name="workflow_action_done" string="Done" type="object" class="oe_highlight" attrs="{'invisible':['|',('state','!=','confirm'),('approve_ok','=',False)]}" confirm="Approve bukti potong?"/>
                <button name="workflow_action_cancel" string="Cancel" type="object" attrs="{'invisible':['|',('state','not in', ['draft', 'confirm', 'done']),('cancel_ok','=',False)]}" confirm="Cancel bukti potong?"/>
                <button name="workflow_action_reset" string="Set to Draft" type="object" attrs="{'invisible':['|',('state','!=','cancel'),('reset_ok','=',False)]}" confirm="Reset bukti potong?"/>
                <field name="state" widget="statusbar"/>
            </header>
            <sheet>
                <h1 name="form_name"/>
                <group name="group_1" colspan="4" col="2">
                    <group name="group_1_1" colspan="1" col="2">
                        <field name="name"/>
                        <field name="date"/>
                        <field name="period_id"/>
                        <field name="company_id"/>
                        <field name="journal_id" domain="[('id', 'in', allowed_journal_ids[0][2])]"/>
                        <field name="account_id" domain="[('id', 'in', allowed_account_ids[0][2])]"/>
                        <field name="direction" invisible="1"/>
                        <field name="type_id" invisible="1"/>
                        <field name="allowed_journal_ids" widget="many2many_tags" invisible="1"/>
                        <field name="allowed_tax_code_ids" widget="many2many_tags" invisible="1"/>
                        <field name="allowed_account_ids" widget="many2many_tags" invisible="1"/>
                    </group>
                    <group name="group_1_2" colspan="1" col="2">
                        <field name="wajib_pajak_id" attrs="{'readonly': ['|',('direction','=','in'),('state','!=','draft')]}"/>
                        <field name="pemotong_pajak_id" attrs="{'readonly': ['|',('direction','=','out'),('state','!=','draft')]}"/>
                        <field name="ttd_id" domain="[('is_company','=',False)]"/>
                        <field name="kpp_id"/>
                    </group>
                </group>
                <notebook>
                    <page name="page_line" string="Details">
                        <field name="line_ids" nolabel="1" colspan="4">
                            <tree>
                                <field name="sequence"/>
                                <field name="tax_code_id"/>
                                <field name="tax_id"/>
                                <field name="amount"/>
                                <field name="amount_tax"/>
                            </tree>
                            <form>
                                <group name="grp_main" colspan="4" col="2">
                                    <field name="sequence"/>
                                    <field name="tax_code_id" domain="[('id','in',parent.allowed_tax_code_ids[0][2])]"/>
                                    <field name="tax_id" domain="[('tax_code_id','=',tax_code_id)]"/>
                                    <field name="analytic_account_id" domain="[('type','!=','view')]"/>
                                    <label for="income_move_line_ids" colspan="2"/>
                                    <field name="income_move_line_ids" colspan="4" nolabel="1"/>
                                    <field name="amount"/>
                                    <field name="amount_tax"/>
                                </group>
                            </form>
                        </field>
                        <group name="group_total" colspan="4" col="2">
                            <field name="total_tax"/>
                        </group>
                    </page>
                    <page name="page_acc" string="Accounting">
                        <group name="group_acc_1" colspan="4" col="2">
                            <field name="move_id"/>
                        </group>
                    </page>
                    <page name="page_policy" string="Policy" groups="base.group_system">
                        <group name="group_policy" colspan="4" col="2">
                            <field name="confirm_ok"/>
                            <field name="approve_ok"/>
                            <field name="cancel_ok"/>
                            <field name="reset_ok"/>
                        </group>
                    </page>
                </notebook>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
        </form>
    </field>
</record>


</data>
</openerp>
