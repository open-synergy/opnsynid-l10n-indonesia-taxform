<openerp>
<data>
<record id="nomor_seri_faktur_pajak_view_tree" model="ir.ui.view">
    <field name="name">Nomor Seri Faktur Pajak</field>
    <field name="model">l10n_id.nomor_seri_faktur_pajak</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name" />
            <field name="taxform_year_id" />
            <field name="branch_id" />
            <field name="lock_nomor_seri" />
        </tree>
    </field>
</record>

<record id="nomor_seri_faktur_pajak_view_form" model="ir.ui.view">
    <field name="name">Nomor Seri Faktur Pajak</field>
    <field name="model">l10n_id.nomor_seri_faktur_pajak</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <button
                            name="action_lock_nomor_seri"
                            type="object"
                            string="Lock Nomor Seri"
                            attrs="{'invisible':[('lock_nomor_seri','=',True)]}"
                        />
                <button
                            name="action_unlock_nomor_seri"
                            type="object"
                            string="Unlock Nomor Seri"
                            attrs="{'invisible':[('lock_nomor_seri','=',False)]}"
                        />
            </header>
            <sheet>
                <div
                            class="oe_right oe_button_box"
                            style="width: 300px;"
                            name="buttons"
                        >
                </div>
                <group name="group_main">
                    <field name="company_id" />
                    <field name="name" />
                    <field name="taxform_year_id" />
                    <field name="lock_nomor_seri" />
                    <field name="branch_id" />
                </group>
                <notebook>
                    <page name="page_invoice" string="Invoices">
                        <group name="group_invoice">
                            <field name="invoice_ids" nolabel="1" />
                        </group>
                    </page>
                </notebook>
            </sheet>
        </form>
    </field>
</record>

<record id="nomor_seri_faktur_pajak_action" model="ir.actions.act_window">
    <field name="name">Nomor Seri Faktur Pajak</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">l10n_id.nomor_seri_faktur_pajak</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
            id="nomor_seri_faktur_pajak_menu"
            name="Nomor Seri Faktur Pajak"
            parent="l10n_id_taxform_faktur_pajak_common.taxform_faktur_pajak_configuration_menu"
            action="nomor_seri_faktur_pajak_action"
            sequence="1"
        />
</data>
</openerp>
