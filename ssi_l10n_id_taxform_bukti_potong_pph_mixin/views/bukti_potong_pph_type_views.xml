<odoo>

    <record id="l10n_id_bukti_potong_pph_type_view_search" model="ir.ui.view">
        <field name="name">l10n_id.bukti_potong_pph_type - search</field>
        <field name="model">l10n_id.bukti_potong_pph_type</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data />
        </field>
    </record>

    <record id="l10n_id_bukti_potong_pph_type_view_tree" model="ir.ui.view">
        <field name="name">l10n_id.bukti_potong_pph_type - tree</field>
        <field name="model">l10n_id.bukti_potong_pph_type</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_tree"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//tree" position="attributes">
                    <attribute name="create">0</attribute>
                    <attribute name="edit">1</attribute>
                    <attribute name="delete">0</attribute>
                </xpath>
                <xpath expr="//field[@name='code']" position="after">
                    <field name="direction" />
                </xpath>
            </data>
        </field>
    </record>

    <record id="bukti_potong_pph_type_view_form" model="ir.ui.view">
        <field name="name">l10n_id.bukti_potong_pph_type - form</field>
        <field name="model">l10n_id.bukti_potong_pph_type</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_form"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//form" position="attributes">
                    <attribute name="create">0</attribute>
                    <attribute name="edit">1</attribute>
                    <attribute name="delete">0</attribute>
                </xpath>
                <xpath expr="//field[@name='code']" position="after">
                    <field name="direction" />
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page name="page_data" string="Data Restriction">
                        <group name="group_data_1" colspan="4" col="2">
                            <field name="journal_ids" widget="many2many_tags" />
                            <field name="account_ids" widget="many2many_tags" />
                            <field name="tax_ids" widget="many2many_tags" />
                        </group>
                    </page>
                </xpath>
            </data>
        </field>
    </record>

    <record id="bukti_potong_pph_type_action" model="ir.actions.act_window">
        <field name="name">Type of Bukti Potong PPh</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">l10n_id.bukti_potong_pph_type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="bukti_potong_pph_type_menu"
        name="Type of Bukti Potong PPh"
        parent="ssi_l10n_id_taxform.taxform_configuration_menu"
        groups="bukti_potong_pph_type_configurator_group"
        action="bukti_potong_pph_type_action"
        sequence="3"
    />
</odoo>
